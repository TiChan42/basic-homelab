system:
  root_password: "root-pw"

  # Admin User
  admin_user: "admin-user"
  admin_password: "admin-pw"

  # Localization
  timezone: "Europe/Berlin"
  locale: "de_DE.UTF-8"
  keyboard_layout: "de"

  # Security
  ssh_authorized_keys: []
  # - "ssh-rsa AAAAB3Nza..."

  network:
    hostname: "proxmox-server"

    prefer_wifi: false
    wifi_ssid: "MyWifiNetwork"
    wifi_password: "MyWifiPassword"

services:
  - name: "HomeAssistant"
    hostname: "homeassistant"
    playbook: "../services/home_assistant/service.yml"
    enabled: true
    allocations:
      cpu: 2
      ram: 4096
      disk: "32G"
    variables: {}
  
  - name: "MQTT"
    hostname: "mqtt"
    playbook: "../services/mqtt/service.yml"
    enabled: true
    allocations: {}
    variables:
      user: "mqtt-user"
      password: "mqtt-pw"

  - name: "Zigbee2MQTT"
    hostname: "zigbee2mqtt"
    playbook: "../services/zigbee2mqtt/service.yml"
    enabled: true
    allocations: {}
    variables: {}

  - name: "NodeRED"
    hostname: "nodered"
    playbook: "../services/nodered/service.yml"
    enabled: true
    allocations: {}
    variables: {}

  - name: "n8n"
    hostname: "n8n"
    playbook: "../services/n8n/service.yml"
    enabled: true
    allocations: {}
    variables: {}

  - name: "Grafana"
    hostname: "grafana"
    playbook: "../services/grafana/service.yml"
    enabled: true
    allocations: {}
    variables: {}
    
  # Optionale Dienste
  - name: "InfluxDB"
    hostname: "influxdb"
    playbook: "../services/influxdb/service.yml"
    enabled: true  # Aktivieren für lokale Datenhaltung
    allocations: {}
    variables: {}

  - name: "NginxProxyManager"
    hostname: "proxy"
    playbook: "../services/npm/service.yml"
    enabled: true  # Aktivieren für einfaches SSL & Domains
    allocations: {}
    variables: {}

backup:
  # Leave connections empty [] to disable backups
  connections: 
    - name: "my-nas"
      type: "smb"
      host: "192.168.1.10"
      share: "backups"
      user: "admin"
      pass: "secret"

    - name: "google-drive"
      type: "gdrive"
      client_id: "your-client-id.apps.googleusercontent.com"
      client_secret: "your-client-secret"
      refresh_token: "your-refresh-token"

  schedule: "0 2 * * *"  # Daily at 2 AM 
